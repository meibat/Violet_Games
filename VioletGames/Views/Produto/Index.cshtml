@model List<ProdutoModel>
@{
    Layout = "_Layout";
}

<nav>
    <div class="text-center">
        <br />
        <table class="table table-content" id="table-produtos">
            <thead>
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">Nome</th>
                    <th scope="col">Categoria</th>
                    <th scope="col">QTDE</th>
                    <th scope="col">Valor Uni.</th>
                    <th scope="col">
                        <a role="button" class="btn btn-success" asp-controller="Produto" asp-action="Create"><img src="~/lib/bottons/add.png" width="30" height="30"></a>
                    </th>
                </tr>
            </thead>
            <tbody>
                <!--Listar contatos SE existir-->
                @if (Model != null && Model.Any())
                {
                    foreach (ProdutoModel produto in Model)
                    {
                        <tr>
                            <th scope="row">@produto.Id</th>
                            <td>@produto.Name</td>
                            <td>@produto.CategoryProduct</td>
                            <td>@produto.QtdAvailable</td>
                            <td>@produto.PriceUnity</td>
                            <td>
                                <div class="btn-group" role="group" aria-label="Basic mixed styles example">
                                    <a role="button" class="btn btn-warning" asp-route-id="@produto.Id" asp-controller="Produto" asp-action="Edit"><img src="~/lib/bottons/edit.png" width="20" height="20"></a>
                                    <a role="button" class="btn btn-danger" asp-route-id="@produto.Id" asp-controller="Produto" asp-action="DeleteConfirm"><img src="~/lib/bottons/Del.png" width="25" height="25"></a>
                                </div>
                            </td>
                        </tr>
                    }
                }
            </tbody>
        </table>
    </div>
</nav>