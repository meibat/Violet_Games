@model ProdutoModel
@{
    Layout = "_Layout";
    ViewData["Title"] = "Violet_Games";
}

<div class="text-center">
    <h3>Realmente deseja apagar o contato (@Model.Name)?</h3>
    <a role="button" class="btn btn-success" asp-controller="Produto" asp-route-id="@Model.Id" asp-action="Delete">Deletar</a>
    <a role="button" class="btn btn-danger" asp-controller="Produto" asp-action="Index">Cancelar</a>
</div>

