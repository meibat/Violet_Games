@model List<ConsoleModel>
@{
    Layout = "_Layout";
}

<nav>
    <div class="text-center">
        <br />
        <table class="table table-content" id="table-consoles">
            <thead>
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">Nome</th>
                    <th scope="col">Marca</th>
                    <th scope="col">Valor</th>
                    <th scope="col">Status</th>
                    <th scope="col"><a role="button" class="btn btn-success" asp-controller="Console" asp-action="Create"><img src="~/lib/bottons/add.png" width="20" height="20"></a></th>
                </tr>
            </thead>
            <tbody>
                <!--Listar contatos SE existir-->
                @if (Model != null && Model.Any())
                {
                    <!--Erro nesse Any-->
                    foreach (ConsoleModel Console in Model)
                    {
                        <tr>
                            <th scope="row">@Console.Id</th>
                            <td>@Console.Name</td>
                            <td>@Console.CategoryConsole</td>
                            <td>@Console.PriceHour</td>
                            <td>@Console.StatusConsole</td>
                            <td>
                                <div class="btn-group" role="group" aria-label="Basic mixed styles example">
                                    <a role="button" class="btn btn-success" asp-route-id="@Console.Id" asp-controller="Agendamento" asp-action="CreateConsole"><img src="~/lib/bottons/scheduler.png" width="25" height="25"></a>
                                    <a role="button" class="btn btn-warning" asp-route-id="@Console.Id" asp-controller="Console" asp-action="Edit"><img src="~/lib/bottons/edit.png" width="20" height="20"></a>
                                    <a role="button" class="btn btn-danger" asp-route-id="@Console.Id" asp-controller="Console" asp-action="DeleteConfirm"><img src="~/lib/bottons/Del.png" width="25" height="25"></a>
                                </div>
                            </td>
                        </tr>
                    }
                }
            </tbody>
        </table>
    </div>
</nav>

