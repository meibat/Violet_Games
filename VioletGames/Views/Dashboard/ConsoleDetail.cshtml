@model List<AgendamentoModel>
@{
    Layout = "_Layout";
}

<nav>
    <div class="text-center">
        <br />
        <table class="table table-content" id="table-consolesAgendados">
            <thead>
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">Nome</th>
                    <th scope="col">Marca</th>
                    <th scope="col">Horário</th>
                </tr>
            </thead>
            <tbody>
                <!--Listar contatos SE existir-->
                @if (Model != null && Model.Any())
                {
                    <!--Erro nesse Any-->
                    foreach (AgendamentoModel agenda in Model)
                    {
                        <tr>
                            <th scope="row">@agenda.Id</th>
                            <td>@agenda.NameGameOrConsole</td>
                            <td>@agenda.Category</td>
                            <td>@agenda.DateSchedule</td>
                            <td>
                                <div class="btn-group" role="group" aria-label="Basic mixed styles example">
                                    <a role="button" class="btn btn-warning" asp-route-id="@agenda.Id" asp-controller="Agendamento" asp-action="Edit"><img src="~/lib/bottons/edit.png" width="20" height="20"></a>
                                    <a role="button" class="btn btn-danger" asp-route-id="@agenda.Id" asp-controller="Agendamento" asp-action="DeleteConfirm"><img src="~/lib/bottons/Del.png" width="25" height="25"></a>
                                </div>
                            </td>
                        </tr>
                    }
                }
            </tbody>
        </table>
    </div>
</nav>




