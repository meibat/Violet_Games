@using VioletGames.Data.Enums
@model UsuarioModel
@{
    Layout = "_Layout";
    ViewData["Title"] = "Violet_Games";
}

<div class="text-center">
    <h1>Cadastrar Usuário</h1><br />
</div>
<form asp-controller="Usuario" asp-action="Create" method="post" class="singin">
    <div class="mb-3">
        <label for="Name" class="form-label">Nome</label>
        <input type="text" asp-for="Name" class="form-control" style="width: 560px; display: inline;" placeholder="Digite o nome">
        @Html.ValidationMessageFor(x => x.Name)
    </div>
    <div class="mb-3">
        <label for="Login" class="form-label">Login</label>
        <input type="text" asp-for="Login" class="form-control" style="width: 240px; display: inline;" placeholder="admin">
        @Html.ValidationMessageFor(x => x.Login)
        <label for="Passwd" class="form-label">Senha</label>
        <input type="text" asp-for="Passwd" class="form-control" style="width: 240px; display: inline;" placeholder="admin123">
        @Html.ValidationMessageFor(x => x.Passwd)
    </div>
    <div class="mb-3">
        <label for="Email" class="form-label">Email</label>
        <input type="text" asp-for="Email" class="form-control" style="width: 360px; display: inline;" placeholder="nome@exemplo.com">
        @Html.ValidationMessageFor(x => x.Email)
    </div>
    <div class="mb-3">
        <label for="Perfil" class="form-label">Perfil</label>
        <select asp-for="Perfil" class="form-control" style="width: 160px; display: inline;">
            <option value="">Selecione</option>
            <option value="@PerfilEnum.Admin">Administrador</option>
            <option value="@PerfilEnum.Stand">Padrão</option>
        </select>
        @Html.ValidationMessageFor(x => x.Perfil)
    </div>
    <div class="singin">
        <button type="submit" class="btn btn-primary">Cadastrar</button>
        <a role="button" class="btn btn-info" asp-controller="Usuario" asp-action="Index">Voltar</a>
    </div>
</form>
