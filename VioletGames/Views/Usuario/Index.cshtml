@model List<UsuarioModel>
@{
    Layout = "_Layout";
    ViewData["Title"] = "Violet_Games";
}

<div class="text-center"><br />
    <table class="table table-content" id="table-usuarios">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Nome</th>
                <th scope="col">Login</th>
                <th scope="col">E-mail</th>
                <th scope="col">Perfil</th>
                <th scope="col">Criado</th>
                <th scope="col">Modificado</th>
                <th scope="col">
                    <a role="button" class="btn btn-success" asp-controller="Usuario" asp-action="Create"><img src="~/lib/bottons/add.png" width="30" height="30"></a>
                </th>
            </tr>
        </thead>
        <tbody>
            <!--Listar contatos SE existir-->
            @if (Model != null && Model.Any())
            {
                foreach (UsuarioModel usuario in Model)
                {
                    <tr>
                        <th scope="row">@usuario.Id</th>
                        <td>@usuario.Name</td>
                        <td>@usuario.Login</td>
                        <td>@usuario.Email</td>
                        <td>@(usuario.Perfil == VioletGames.Enums.PerfilEnum.Admin ? "Administrador" : "Padrão")</td>
                        <td>@usuario.DateSingIn</td>
                        <td>@usuario.DateRefresh</td>
                        <td>
                            <div class="btn-group" role="group" aria-label="Basic mixed styles example">
                                <a role="button" class="btn btn-warning" asp-route-id="@usuario.Id" asp-controller="Usuario" asp-action="Edit"><img src="~/lib/bottons/edit.png" width="20" height="20"></a>
                                <a role="button" class="btn btn-danger" asp-route-id="@usuario.Id" asp-controller="Usuario" asp-action="DeleteConfirm"><img src="~/lib/bottons/Del.png" width="25" height="25"></a>
                            </div>
                        </td>
                    </tr>
                }
            }
        </tbody>
    </table>
</div>

