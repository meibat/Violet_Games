@model List<ItemPedidoModel>

<div class="div-table">
    <div class="div-itens">
        <h1>ITENS ADICIONADOS</h1>
        <table class="table table-content" id="table-caixa">
            <thead>
                <tr>
                    <th scope="col">Nº Venda</th>
                    <th scope="col">Produto</th>
                    <th scope="col">Quantidade</th>
                    <th scope="col">Total</th>
                </tr>
            </thead>
            <tbody>
                @if (Model != null)
                {
                    @foreach (var pedido in Model)
                    {
                <tr>
                    <td>@Html.DisplayFor(modelItem => pedido.id)</td>
                    <td>@Html.DisplayFor(modelItem => pedido.NameProduct)</td>
                    <td>@Html.DisplayFor(modelItem => pedido.QtdAvailable)</td>
                    <td>@Html.DisplayFor(modelItem => pedido.PriceTotal)</td>
                </tr>
                    }
                }
            </tbody>
        </table>
        <div class="btn-group" role="group" aria-label="Basic mixed styles example">
            <form asp-controller="Caixa" asp-action="AddItem" method="post" class="singin">
                <button type="submit" class="btn btn-primary"><img src="~/lib/bottons/edit.png" width="20" height="20"></button>
                <a role="button" class="btn btn-danger" asp-controller="Produto" asp-action="DeleteConfirm"><img src="~/lib/bottons/Del.png" width="25" height="25"></a>
            </form>
        </div>
    </div>
</div>
