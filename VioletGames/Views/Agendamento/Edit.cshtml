@using VioletGames.Data.Enums
@model AgendamentoModel
@{
    Layout = "_Layout";
}

<div class="text-center">
    <h1>Editar Jogo</h1><br />
</div>
<form asp-controller="Agedamento" asp-action="Create" method="post" class="singin">
    <div class="mb-3">
        <label for="Name" class="form-label">Nome: @Model.NameGameOrConsole</label>
        <label for="Name" class="form-label">Usuário: @Model.LoginUser</label>
        <label for="Name" class="form-label">Categoria: @Model.Category</label>
    </div>
    <div class="mb-3">
        <label for="CPF" class="form-label">CPF</label>
        <input type="text" asp-for="CPFClient" class="form-control" style="width: 560px; display: inline;" placeholder="CPF do Cliente">
        @Html.ValidationMessageFor(x => x.CPFClient)
    </div>
    <div class="mb-3">

    </div>
    <div class="mb-3">
        <label for="Price" class="form-label">Valor Total</label>
        <input type="text" asp-for="TotalValue" class="form-control" style="width: 360px; display: inline;" placeholder="00,00">
        @Html.ValidationMessageFor(x => x.TotalValue)
    </div><br />
    <div class="singin">
        <button type="submit" class="btn btn-primary">Editar</button>
        <a role="button" class="btn btn-info" asp-controller="Jogo" asp-action="Index">Voltar</a>
    </div>
</form>
