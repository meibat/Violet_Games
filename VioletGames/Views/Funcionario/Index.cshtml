@model List<FuncionarioModel>
@{
    Layout = "_Layout";
}

<nav class="content-fixed">
    <div class="text-center">
        <br />
        <table class="table table-content" id="table-funcionarios">
            <thead>
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">Nome</th>
                    <th scope="col">Data Nasc.</th>
                    <th scope="col">E-mail</th>
                    <th scope="col">Telefone</th>
                    <th scope="col">CPF</th>
                    <th scope="col">Admissão</th>
                    <th scope="col">Cargo</th>
                    <th scope="col">Salário</th>
                    <th scope="col">
                        <a role="button" class="btn btn-success" asp-controller="Funcionario" asp-action="Create"><img src="~/lib/bottons/add.png" width="30" height="30"></a>
                    </th>
                </tr>
            </thead>
            <tbody>
                <!--Listar contatos SE existir-->
                @if (Model != null && Model.Any())
                {
                    foreach (FuncionarioModel funcionario in Model)
                    {
                        <tr>
                            <th scope="row">@funcionario.Id</th>
                            <td>@funcionario.Name</td>
                            <td>@funcionario.DateBirthday.ToString("dd/MM/yyyy")</td>
                            <td>@funcionario.Email</td>
                            <td>@funcionario.Phone</td>
                            <td>@funcionario.CPF</td>
                            <td>@funcionario.DateAdmission</td>
                            <td>@(funcionario.Office == VioletGames.Data.Enums.Office.Boss ? "Gerente" : "Atendente")</td>
                            <td>@funcionario.Pay</td>
                            <td>
                                <div class="btn-group" role="group" aria-label="Basic mixed styles example">
                                    <a role="button" class="btn btn-warning" asp-route-id="@funcionario.Id" asp-controller="Funcionario" asp-action="Edit"><img src="~/lib/bottons/edit.png" width="20" height="20"></a>
                                    <a role="button" class="btn btn-danger" asp-route-id="@funcionario.Id" asp-controller="Funcionario" asp-action="DeleteConfirm"><img src="~/lib/bottons/Del.png" width="25" height="25"></a>
                                </div>
                            </td>
                        </tr>
                    }
                }
            </tbody>
        </table>
    </div>

</nav>
